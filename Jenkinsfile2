pipeline {
    agent none

    stages {
        stage('Run Parallel Tests') {
            parallel {
                stage('WindowsLabel') {
                    agent {
                        label 'Windows'
                    }
                    steps {
                        script {
                            bat 'echo "Sleep 10 seconds on Windows Node"'
                            bat 'powershell Start-Sleep -Seconds 10'
                        }
                    }
                }

                stage('Linux') {
                    agent {
                        label 'LinuxLabel'
                    }
                    steps {
                        script {
                            sh 'echo "Sleep 10 seconds on Linux Node"'
                            sh 'sleep 10'
                        }
                    }
                }
            }
        }
    }
}
