pipeline {
    agent none

    stages {
        stage('Run Jobs in Parallel') {
            parallel {
                stage('Run on Linux') {
                    agent {
                        label 'linux'
                    }
                    steps {
                        script {
                            sh 'echo "Running on Linux"'
                        }
                    }
                }
                stage('Run on Windows') {
                    agent {
                        label 'windows'
                    }
                    steps {
                        script {
                            bat 'echo "Running on Windows"'
                        }
                    }
                }
            }
        }
    }
}
