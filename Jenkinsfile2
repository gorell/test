pipeline {
    agent none

    stages {
        stage('Run Jobs in Parallel') {
            parallel {
                stage('Run on Windows') {
                    agent {
                        label 'windows'
                    }
                    steps {
                        script {
                            // Your Windows-specific build steps go here
                            bat 'echo "Running on Windows"'
                            bat 'dir'
                        }
                    }
                }

                stage('Run on Linux') {
                    agent {
                        label 'linux'
                    }
                    steps {
                        script {
                            // Your Linux-specific build steps go here
                            sh 'echo "Running on Linux"'
                            sh 'ls -la'
                        }
                    }
                }
            }
        }
    }
}
